@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
    <div class="item">
        <p>@GetTimeString()</p>
    </div>
</root>

@code
{
    [Property] public GameManger Game { get; set; }

    string GetTimeString()
    {
        var time = Game.GameTime;
        var minutes = (int)(time / 60);
        var seconds = (int)(time % 60);

        return $"{minutes}:{seconds:00}";

    }

    protected override int BuildHash() => System.HashCode.Combine(Game.GameTime);
}
